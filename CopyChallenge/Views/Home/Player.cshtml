@{
    ViewData["Title"] = "Palyer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Palyer</h2>

@(Html.DevExtreme().DataGrid<CopyChallenge.Models.Player>()
    .DataSource(ds => ds.Mvc()
        .Controller("Players")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("ID")
    )
    .RemoteOperations(true)
    .Columns(columns => {

                            columns.AddFor(m => m.FirstName);

                            columns.AddFor(m => m.LastName);

                            columns.AddFor(m => m.Week1);

                            columns.AddFor(m => m.Week2);

                            columns.AddFor(m => m.Week3);

                            columns.AddFor(m => m.Week4);

                            columns.AddFor(m => m.Week5);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
        .Mode(GridEditMode.Batch)
    ))
